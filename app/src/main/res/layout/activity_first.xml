<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white" >

   <com.DCHZ.TYLINCN.component.HeaderSelectView
       android:id="@+id/header"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/common_grey"></com.DCHZ.TYLINCN.component.HeaderSelectView>
    <com.DCHZ.TYLINCN.component.HeaderSearchView
        android:id="@+id/header_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginTop="12dp"
        ></com.DCHZ.TYLINCN.component.HeaderSearchView>
    <com.DCHZ.TYLINCN.msglist.MsgPage 
        android:id="@+id/first_msgPage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="11.5dp"
        android:layout_below="@id/header_search"
        ></com.DCHZ.TYLINCN.msglist.MsgPage>
</RelativeLayout>