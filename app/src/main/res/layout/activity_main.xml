<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

		<TabWidget 
		    android:id="@android:id/tabs" 
		    android:visibility="gone"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" />
		
        <LinearLayout
            android:id="@+id/linear_btn_group"
            android:layout_width="fill_parent"
            android:layout_height="52dp" 
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:minHeight="52dp"
            >
            <RelativeLayout 
                android:id="@+id/rela_btn_first"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#f6f6f6"
                >

	            <ImageView
	                android:id="@+id/btn_img_first"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentBottom="true"
	                android:layout_centerHorizontal="true"
	                android:src="@drawable/tab_main_first" />

            </RelativeLayout>

            <!--  
            <View 
                android:layout_height="fill_parent"
                android:layout_width="1dp"
                android:background="#d2d2d2"
                android:visibility="gone"
                />
            -->
            
            <RelativeLayout 
                android:id="@+id/rela_btn_second"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#f6f6f6"
                >

                  <ImageView 
                    android:id="@+id/btn_img_second"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/tab_main_second"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    />
                  
                
            </RelativeLayout>

            <!--  
            <View 
                android:layout_height="fill_parent"
                android:layout_width="1dp"
                android:background="#d2d2d2"
                />
             -->
             
            <RelativeLayout 
                android:id="@+id/rela_btn_third"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#f6f6f6"
                >

               <ImageView 
                 android:id="@+id/btn_img_third"
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:src="@drawable/tab_main_third"
                 android:layout_alignParentTop="true"
                 android:layout_centerHorizontal="true"
                 android:layout_marginTop="6dp"
                 />
               
                
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rela_btn_forth"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#f6f6f6"
                >

                <ImageView
                    android:id="@+id/btn_img_forth"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/tab_main_forth"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    />


            </RelativeLayout>
              
		</LinearLayout>
        
        <!-- line -->
        <View 
           android:id="@+id/line"
           android:layout_width="fill_parent"
           android:layout_height="1px"
           android:layout_above="@id/linear_btn_group"
           android:background="#cdcccc"
           ></View>
        
        <FrameLayout 
		    android:id="@android:id/tabcontent"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent" 
			android:layout_above="@id/line"
			/>
        
    </RelativeLayout>
    
 </TabHost>