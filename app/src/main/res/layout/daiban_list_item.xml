<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/more_setting_bg_selector"
     >
     <ImageView 
         android:id="@+id/image_yiban"
	    android:layout_width="100dp"
	    android:layout_height="80dp"
	    android:layout_marginRight="20dp"
	    android:src="@drawable/yiban_list"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    android:visibility="gone"
	    android:alpha="0.8"/>
    <LinearLayout 
        android:id="@+id/layout_daiban"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12.5dp"
        android:layout_marginBottom="12.5dp"
        android:orientation="horizontal">
        <TextView 
            android:id="@+id/text_daibanList_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            android:textColor="#FF6600"
            android:text="刘雪山"/>
        <TextView 
            android:id="@+id/text_daibanList_type"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginLeft="30dp"
            android:textColor="#000000"
            android:text="费用报销单"/>
        <TextView 
            android:id="@+id/text_daibanList_moeny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="12.5dp"
            android:textSize="16sp"
            android:textColor="#0000ff"
            android:text="¥ 92690.98"/>
    </LinearLayout>
	<TextView 
	    android:id="@+id/text_daibanList_time"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/layout_daiban"
	    android:layout_marginLeft="20dp"
	    android:textSize="14sp"
	    android:textColor="#909090"
	    android:text="2015-8-29 10:02:20"/>
	<View 
	    android:layout_width="fill_parent"
	    android:layout_height="1px"
	    android:background="#FF6600"
	    android:layout_below="@id/text_daibanList_time"
	    android:layout_marginTop="25dp"
	    android:layout_marginLeft="20dp"/>
	
</RelativeLayout>
