<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_white" >

    <RelativeLayout
        android:id="@+id/item_top"
        android:layout_width="fill_parent"
        android:layout_height="55dp" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_alignParentTop="true"
            android:background="@color/common_orange" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:background="@color/common_orange" />

        <View
            android:id="@+id/view"
            android:layout_width="3dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12.5dp"
            android:background="@color/common_orange" />

        <TextView
            android:id="@+id/text_top"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/view"
            android:text="您的意见"
            android:textColor="@color/common_orange"
            android:textSize="16sp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/edit_opinion"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_below="@id/item_top"
        android:layout_margin="12.5dp"
        android:background="#dddddd"
        android:gravity="top|left"
        android:hint="请输入您的意见"
        android:textSize="14sp" />

    <View
        android:id="@+id/line1"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@id/edit_opinion"
        android:background="@color/common_grey" />

    <LinearLayout
        android:id="@+id/layout_type"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/line1"
        android:clickable="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text_type"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="12.5dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="提交方式" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12.5dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/enter" />
    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@id/layout_type"
        android:background="@color/common_grey" />

    <LinearLayout
        android:id="@+id/layout_next"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/line"
        android:clickable="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text_next"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="12.5dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="下一环节" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12.5dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/enter" />
    </LinearLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@id/layout_next"
        android:background="@color/common_grey" />

    <Button
        android:id="@+id/btn_do"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_below="@id/line2"
        android:layout_centerHorizontal="true"
        android:layout_margin="12.5dp"
        android:background="@drawable/bg_btn_selecter"
        android:text="确定"
        android:textColor="@color/common_white"
        android:textSize="14sp" />

</RelativeLayout>