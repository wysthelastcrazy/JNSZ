<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="68dp"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@drawable/more_setting_bg_selector"
    android:id="@+id/linear_main"
    >

    <!-- 转菊花 -->
    <ProgressBar
         android:id="@+id/pagination_progress_bar" 
         android:paddingRight="8.0dip"
         android:layout_width="26dp" 
         android:layout_height="18dp"
         android:indeterminateDrawable="@drawable/ablum_progress" 
         />
    
    <TextView 
        android:id="@+id/msgitem_bottom_view"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:text="正在加载...."
        android:textSize="14sp"
        android:textColor="@color/common_grey"
        />
    
</LinearLayout>
